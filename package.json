{
  "name": "scrollspy",
  "license": "MIT",
  "version": "0.0.3",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup index.tsx --format cjs,esm --dts",
    "lint": "tsc",
    "release": "changeset",
    "ci:publish": "pnpm build && changeset publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@types/node": "^22.9.4",
    "@types/react": "^18.3.12",
    "react": "^19.0.0-rc.0",
    "react-dom": "^19.0.0-rc.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0 <20.0.0",
    "react-dom": ">=16.8.0 <20.0.0"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  }
}
